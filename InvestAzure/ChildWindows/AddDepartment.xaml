        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="10,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="341"/>
        <TextBox x:Name="txtUbicacion" HorizontalAlignment="Left" Height="23" Margin="10,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="341"/>
        <ComboBox x:Name="cb1" HorizontalAlignment="Left" Margin="10,93,0,0" VerticalAlignment="Top" Width="341" Height="25"/>
    </Grid>
</controls:ChildWindow>